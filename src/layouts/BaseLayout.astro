---
export type Props = {
    title: string;
    description?: string | undefined;
    image?: string | undefined;
};

const { title, description, image } = Astro.props;
const url = Astro.url.toString();
const canonical = url.endsWith("/") ? url.substring(0, url.length - 1) : url;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" href="/favicon.ico" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="canonical" href={canonical} />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        {description && <meta name="description" content={description} />}
        <title>{title} - Uma Cafe</title>
        <meta property="og:site_name" content="UmaCafe" />
        <meta property="og:title" content={`${title} - UmaCafe`} />
        {
            description && (
                <meta property="og:description" content={description} />
            )
        }
        <meta property="og:url" content={canonical} />
        {image && <meta property="og:image" content={image} />}
        <slot name="head" />

        <style>
            body {
                font-family: -apple-system, BlinkMacSystemFont, avenir next,
                    avenir, segoe ui, helvetica neue, helvetica, Ubuntu, roboto,
                    noto, arial, sans-serif;
                font-weight: 400;
                line-height: 1.5;
                font-size: 1rem;
                padding: 0;
                margin: 0;
                height: 100vh;
            }

            code,
            pre {
                font-family: "Courier New", Courier, monospace;
            }
        </style>
    </head>

    <body>
        <slot />
    </body>
</html>
